#  define MTtr = sqrt( 2*track[0].pT * MET*(1-cos(MET.phi - track[0].phi )))
#  select MTtr > 100

define HT = sum(jets.pT)
define MHT = -sum(jetsmht)

# preselection region
region presel
  select size(jets) >= 2
  select HT > 300
  select MHT > 300
  select size(muons) == 0
  select size(electrons) == 0
  #select size(tracks) == 0
  select dphi(jets[0], MHT) > 0.5  
  select dphi(jets[1], MHT) > 0.5  
  select size(jets) >= 3 ? dphi(jets[2], MHT) > 0.3
  select size(jets) >= 4 ? dphi(jets[3], MHT) > 0.3

# 2 jets signal regions
region 2jets
  select presel
  bin size(bjets) 0 1 2
  bin MHT > 300 and MHT < 350 and HT > 300 and HT < 500
  bin MHT > 300 and MHT < 350 and HT > 500 and HT < 1000
  bin MHT > 300 and MHT < 350 and HT > 1000
  bin MHT > 350 and MHT < 500 and HT > 300 and HT < 500
  bin MHT > 350 and MHT < 500 and HT > 500 and HT < 1000
  bin MHT > 350 and MHT < 500 and HT > 1000
  bin MHT > 500 and MHT < 750 and HT > 500 and HT < 1000
  bin MHT > 500 and MHT < 750 and HT > 1000
  bin MHT > 750 and HT > 750 and HT < 1500
  bin MHT > 750 and HT > 1500 

# 3-4 jets signal regions
region 34jets
  select presel
  select size(jets) [] 3 4
  bin size(bjets) 0 1 2 3
  bin MHT > 300 and MHT < 350 and HT > 300 and HT < 500
  bin MHT > 300 and MHT < 350 and HT > 500 and HT < 1000
  bin MHT > 300 and MHT < 350 and HT > 1000

#info analysis
#  title "Search for supersymmetry in multijet events with missing transverse momentum in 
# proton-proton collisions at 13 TeV"
#  experiment CMS
#  id SUS-16-033
#  publication Phys. Rev. D 96, 032003 (2017)
#  sqrtS 13.0
#  lumi 35.9
#  arXiv 1704.07781  
#  hepdata 
#  doi 10.1103/PhysRevD.96.032003

object jets
  take Jet
  select pT > 30  
  select abs(Eta) < 2.4

object jetsmht
  take Jet
  select pT > 30  
  select abs(Eta) < 5

object bjets
  take jets
  select BTag == 1

object muons
  take Muon
  select pT > 10
  select abs(eta) < 2.4
  select D0 < 2
  # relative isolation Irel < 0.2

object electrons
  take Electron
  select pT > 10
  select abs(eta) < 2.5
  select D0 < 2
  # relative isolation Irel < 0.1

object leptons
  take electrons
  take muons
  
object MET
  take MissingET

#object tracks
#  take Track
# Cutflow table gives ele, mu and had tracks separately - can do that
# Let's turn the leptonic tracks off for the overlap study
# select pT > 5 ? dR(lepton, Track) < 0.2 : dR(lepton, Track) >= 0.2
# for hadronic tracks:
#  select pT > 10
#  select abs(eta) < 2.4

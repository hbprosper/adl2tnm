  bin MHT > 350 and MHT < 500 and HT > 1000
  bin MHT > 500 and MHT < 750 and HT > 500 and HT < 1000
  bin MHT > 500 and MHT < 750 and HT > 1000
  bin MHT > 750 and HT > 750 and HT < 1500
  bin MHT > 750 and HT > 1500 

